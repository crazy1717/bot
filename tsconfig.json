{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
